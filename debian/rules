#!/usr/bin/make -f
include /usr/share/dpkg/pkg-info.mk

GO_LDFLAGS += -X github.com/projectcalico/node/pkg/startup.VERSION=$(DEB_VERSION_UPSTREAM)
GO_LDFLAGS += -X github.com/projectcalico/node/vendor/github.com/projectcalico/felix/buildinfo.GitVersion=$(DEB_VERSION_UPSTREAM)
GO_LDFLAGS += -X github.com/projectcalico/node/vendor/github.com/projectcalico/felix/buildinfo.GitRevision=$(git rev-parse HEAD || echo '<unknown>')

export CGO_CFLAGS            := $(CFLAGS)
export CGO_CPPFLAGS          := $(CPPFLAGS)
export GO111MODULE=on
export GOPROXY=

override_dh_auto_install:
	dh_auto_install -- --no-source

%:
	dh $@ --buildsystem=golang --with=golang

override_dh_auto_test:
	# The test suite doesn't really work outside of the provided Docker
	# container since it depends on a running etcd...
	/bin/true

override_dh_auto_build:
	go env
	dh_auto_build -- -tags '$(TAGS)' -ldflags '$(GO_LDFLAGS)'
